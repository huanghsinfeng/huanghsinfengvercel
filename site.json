---
layout: null
permalink: /site.json
---
{
  "title": "{{ site.title | escape }}",
  "description": "{{ site.description | escape }}",
  "url": "{{ site.url }}",
  "posts_count": {{ site.posts | size }},
  "posts": [
    {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "{{ post.url }}",
      "date": "{{ post.date | date_to_string }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
